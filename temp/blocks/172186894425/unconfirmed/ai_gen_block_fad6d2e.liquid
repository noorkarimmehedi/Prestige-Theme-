{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-category-slider-{{ ai_gen_id }} {
    {% if block.settings.full_width %}
      width: 100%;
    {% else %}
      max-width: 1500px;
      margin: 0 auto;
    {% endif %}
    {% unless block.settings.remove_horizontal_spacing %}
      padding-left: 25px;
      padding-right: 25px;
    {% endunless %}
  }

  .ai-category-slider-container-{{ ai_gen_id }} {
    display: flex;
    overflow-x: auto;
    gap: {{ block.settings.item_spacing }}px;
    padding: {{ block.settings.vertical_padding }}px 0;
    scroll-behavior: smooth;
    -webkit-overflow-scrolling: touch;
  }

  .ai-category-slider-container-{{ ai_gen_id }}::-webkit-scrollbar {
    height: 6px;
  }

  .ai-category-slider-container-{{ ai_gen_id }}::-webkit-scrollbar-track {
    background: #f1f1f1;
    border-radius: 3px;
  }

  .ai-category-slider-container-{{ ai_gen_id }}::-webkit-scrollbar-thumb {
    background: #c1c1c1;
    border-radius: 3px;
  }

  .ai-category-slider-container-{{ ai_gen_id }}::-webkit-scrollbar-thumb:hover {
    background: #a8a8a8;
  }

  .ai-category-item-{{ ai_gen_id }} {
    flex: 0 0 auto;
    width: {{ block.settings.item_width }}px;
    text-align: center;
  }

  .ai-category-link-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-decoration: none;
    color: inherit;
    transition: transform 0.3s ease;
  }

  .ai-category-link-{{ ai_gen_id }}:hover {
    transform: translateY(-2px);
  }

  .ai-category-image-wrapper-{{ ai_gen_id }} {
    width: 100%;
    height: {{ block.settings.image_height }}px;
    border-radius: {{ block.settings.image_border_radius }}px;
    overflow: hidden;
    margin-bottom: {{ block.settings.text_spacing }}px;
    position: relative;
  }

  .ai-category-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .ai-category-link-{{ ai_gen_id }}:hover .ai-category-image-{{ ai_gen_id }} {
    transform: scale(1.05);
  }

  .ai-category-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: {{ block.settings.placeholder_color }};
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-category-placeholder-{{ ai_gen_id }} svg {
    width: 50%;
    height: 50%;
    opacity: 0.5;
  }

  .ai-category-title-{{ ai_gen_id }} {
    font-family: {{ settings.heading_font.family }}, {{ settings.heading_font.fallback_families }};
    font-weight: {{ settings.heading_font.weight }};
    font-size: {{ block.settings.title_font_size }}px;
    color: {{ block.settings.title_color }};
    margin: 0;
    line-height: 1.2;
    text-transform: {{ block.settings.title_text_transform }};
    letter-spacing: {{ settings.heading_letter_spacing | times: 0.01 }}em;
  }

  .ai-category-empty-state-{{ ai_gen_id }} {
    text-align: center;
    padding: 40px 20px;
    color: #666;
    font-style: italic;
  }

  @media screen and (max-width: 749px) {
    .ai-category-slider-{{ ai_gen_id }} {
      {% unless block.settings.remove_horizontal_spacing %}
        padding-left: 15px;
        padding-right: 15px;
      {% endunless %}
    }

    .ai-category-item-{{ ai_gen_id }} {
      width: {{ block.settings.item_width_mobile }}px;
    }

    .ai-category-image-wrapper-{{ ai_gen_id }} {
      height: {{ block.settings.image_height_mobile }}px;
    }

    .ai-category-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_font_size_mobile }}px;
    }
  }
{% endstyle %}

<div
  class="ai-category-slider-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
  {% if block.settings.remove_vertical_spacing %}
    style="--section-spacing-block: 0px;"
  {% endif %}
>
  <div class="ai-category-slider-container-{{ ai_gen_id }}">
    {% if block.settings.collection_list != blank %}
      {% for collection in block.settings.collection_list %}
        <div class="ai-category-item-{{ ai_gen_id }}">
          <a href="{{ collection.url }}" class="ai-category-link-{{ ai_gen_id }}">
            <div class="ai-category-image-wrapper-{{ ai_gen_id }}">
              {% if collection.image %}
                <img
                  src="{{ collection.image | image_url: width: 400 }}"
                  alt="{{ collection.title | escape }}"
                  class="ai-category-image-{{ ai_gen_id }}"
                  loading="lazy"
                  width="400"
                  height="{{ block.settings.image_height }}"
                >
              {% else %}
                <div class="ai-category-placeholder-{{ ai_gen_id }}">
                  {{ 'collection-1' | placeholder_svg_tag }}
                </div>
              {% endif %}
            </div>
            {% if block.settings.show_titles %}
              <p class="ai-category-title-{{ ai_gen_id }}">{{ collection.title }}</p>
            {% endif %}
          </a>
        </div>
      {% endfor %}
    {% else %}
      <div class="ai-category-empty-state-{{ ai_gen_id }}">
        <p>No collections selected. Add collections to display your category slider.</p>
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Category slider",
  "settings": [
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "Full width",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "remove_vertical_spacing",
      "label": "Remove vertical spacing",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "remove_horizontal_spacing",
      "label": "Remove horizontal spacing",
      "default": false
    },
    {
      "type": "range",
      "id": "vertical_padding",
      "min": 0,
      "max": 50,
      "step": 5,
      "unit": "px",
      "label": "Vertical padding",
      "default": 15
    },
    {
      "type": "range",
      "id": "item_spacing",
      "min": 0,
      "max": 40,
      "step": 2,
      "unit": "px",
      "label": "Space between items",
      "default": 16
    },
    {
      "type": "header",
      "content": "Collections"
    },
    {
      "type": "collection_list",
      "id": "collection_list",
      "label": "Collections"
    },
    {
      "type": "header",
      "content": "Item size"
    },
    {
      "type": "range",
      "id": "item_width",
      "min": 120,
      "max": 300,
      "step": 10,
      "unit": "px",
      "label": "Item width (desktop)",
      "default": 200
    },
    {
      "type": "range",
      "id": "item_width_mobile",
      "min": 100,
      "max": 200,
      "step": 10,
      "unit": "px",
      "label": "Item width (mobile)",
      "default": 150
    },
    {
      "type": "range",
      "id": "image_height",
      "min": 120,
      "max": 300,
      "step": 10,
      "unit": "px",
      "label": "Image height (desktop)",
      "default": 200
    },
    {
      "type": "range",
      "id": "image_height_mobile",
      "min": 100,
      "max": 200,
      "step": 10,
      "unit": "px",
      "label": "Image height (mobile)",
      "default": 150
    },
    {
      "type": "range",
      "id": "image_border_radius",
      "min": 0,
      "max": 50,
      "step": 2,
      "unit": "px",
      "label": "Image border radius",
      "default": 8
    },
    {
      "type": "color",
      "id": "placeholder_color",
      "label": "Placeholder background",
      "default": "#f4f4f4"
    },
    {
      "type": "header",
      "content": "Text"
    },
    {
      "type": "checkbox",
      "id": "show_titles",
      "label": "Show collection titles",
      "default": true
    },
    {
      "type": "range",
      "id": "title_font_size",
      "min": 12,
      "max": 24,
      "step": 1,
      "unit": "px",
      "label": "Title size (desktop)",
      "default": 16
    },
    {
      "type": "range",
      "id": "title_font_size_mobile",
      "min": 10,
      "max": 20,
      "step": 1,
      "unit": "px",
      "label": "Title size (mobile)",
      "default": 14
    },
    {
      "type": "select",
      "id": "title_text_transform",
      "label": "Title text transform",
      "options": [
        {
          "value": "none",
          "label": "Normal"
        },
        {
          "value": "uppercase",
          "label": "Uppercase"
        },
        {
          "value": "lowercase",
          "label": "Lowercase"
        },
        {
          "value": "capitalize",
          "label": "Capitalize"
        }
      ],
      "default": "none"
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Title color",
      "default": "#1c1c1c"
    },
    {
      "type": "range",
      "id": "text_spacing",
      "min": 5,
      "max": 30,
      "step": 1,
      "unit": "px",
      "label": "Space between image and title",
      "default": 12
    }
  ],
  "presets": [
    {
      "name": "Category slider"
    }
  ]
}
{% endschema %}