{% doc %}
  @prompt
    generate a Text with icons section for me but in mobile version the three section i will add should in one row 
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-text-icons-{{ ai_gen_id }} {
    padding: 40px 20px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-text-icons-container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
  }

  .ai-text-icons-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ block.settings.spacing_desktop }}px;
    align-items: start;
  }

  .ai-text-icons-item-{{ ai_gen_id }} {
    text-align: {{ block.settings.text_alignment }};
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.item_spacing }}px;
  }

  {% if block.settings.text_alignment == 'center' %}
    .ai-text-icons-item-{{ ai_gen_id }} {
      align-items: center;
    }
  {% elsif block.settings.text_alignment == 'right' %}
    .ai-text-icons-item-{{ ai_gen_id }} {
      align-items: flex-end;
    }
  {% else %}
    .ai-text-icons-item-{{ ai_gen_id }} {
      align-items: flex-start;
    }
  {% endif %}

  .ai-text-icons-icon-wrapper-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    justify-content: center;
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    background-color: {{ block.settings.icon_background_color }};
    border-radius: {{ block.settings.icon_border_radius }}px;
    margin-bottom: {{ block.settings.icon_margin_bottom }}px;
  }

  .ai-text-icons-icon-{{ ai_gen_id }} {
    width: calc({{ block.settings.icon_size }}px * 0.6);
    height: calc({{ block.settings.icon_size }}px * 0.6);
    color: {{ block.settings.icon_color }};
  }

  .ai-text-icons-title-{{ ai_gen_id }} {
    color: {{ block.settings.title_color }};
    font-size: {{ block.settings.title_size }}px;
    font-weight: {{ block.settings.title_weight }};
    margin: 0;
    line-height: 1.3;
  }

  .ai-text-icons-description-{{ ai_gen_id }} {
    color: {{ block.settings.description_color }};
    font-size: {{ block.settings.description_size }}px;
    line-height: 1.5;
    margin: 0;
  }

  @media screen and (max-width: 749px) {
    .ai-text-icons-{{ ai_gen_id }} {
      padding: 30px 15px;
    }

    .ai-text-icons-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat(3, 1fr);
      gap: {{ block.settings.spacing_mobile }}px;
    }

    .ai-text-icons-item-{{ ai_gen_id }} {
      text-align: center;
      align-items: center;
      gap: {{ block.settings.item_spacing | times: 0.8 }}px;
    }

    .ai-text-icons-icon-wrapper-{{ ai_gen_id }} {
      width: {{ block.settings.icon_size | times: 0.8 }}px;
      height: {{ block.settings.icon_size | times: 0.8 }}px;
      margin-bottom: {{ block.settings.icon_margin_bottom | times: 0.8 }}px;
    }

    .ai-text-icons-icon-{{ ai_gen_id }} {
      width: calc({{ block.settings.icon_size | times: 0.8 }}px * 0.6);
      height: calc({{ block.settings.icon_size | times: 0.8 }}px * 0.6);
    }

    .ai-text-icons-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.9 }}px;
    }

    .ai-text-icons-description-{{ ai_gen_id }} {
      font-size: {{ block.settings.description_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div class="ai-text-icons-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-text-icons-container-{{ ai_gen_id }}">
    <div class="ai-text-icons-grid-{{ ai_gen_id }}">
      {% for i in (1..3) %}
        {% liquid
          assign title_key = 'item_' | append: i | append: '_title'
          assign description_key = 'item_' | append: i | append: '_description'
          assign icon_key = 'item_' | append: i | append: '_icon'
          
          assign item_title = block.settings[title_key]
          assign item_description = block.settings[description_key]
          assign item_icon = block.settings[icon_key]
        %}
        
        <div class="ai-text-icons-item-{{ ai_gen_id }}">
          <div class="ai-text-icons-icon-wrapper-{{ ai_gen_id }}">
            {% case item_icon %}
              {% when 'shipping' %}
                <svg class="ai-text-icons-icon-{{ ai_gen_id }}" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/>
                </svg>
              {% when 'support' %}
                <svg class="ai-text-icons-icon-{{ ai_gen_id }}" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192L5.636 18.364M12 2.25a9.75 9.75 0 109.75 9.75A9.75 9.75 0 0012 2.25z"/>
                </svg>
              {% when 'security' %}
                <svg class="ai-text-icons-icon-{{ ai_gen_id }}" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                </svg>
              {% when 'quality' %}
                <svg class="ai-text-icons-icon-{{ ai_gen_id }}" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"/>
                </svg>
              {% when 'returns' %}
                <svg class="ai-text-icons-icon-{{ ai_gen_id }}" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
                </svg>
              {% when 'heart' %}
                <svg class="ai-text-icons-icon-{{ ai_gen_id }}" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
                </svg>
              {% when 'gift' %}
                <svg class="ai-text-icons-icon-{{ ai_gen_id }}" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v13m0-13V6a2 2 0 112 2h-2zm0 0V5.5A2.5 2.5 0 109.5 8H12zm-7 4h14M5 12a2 2 0 110-4h14a2 2 0 110 4M5 12v7a2 2 0 002 2h10a2 2 0 002-2v-7"/>
                </svg>
              {% when 'clock' %}
                <svg class="ai-text-icons-icon-{{ ai_gen_id }}" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              {% else %}
                <svg class="ai-text-icons-icon-{{ ai_gen_id }}" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
                </svg>
            {% endcase %}
          </div>
          
          {% if item_title != blank %}
            <h3 class="ai-text-icons-title-{{ ai_gen_id }}">{{ item_title }}</h3>
          {% endif %}
          
          {% if item_description != blank %}
            <p class="ai-text-icons-description-{{ ai_gen_id }}">{{ item_description }}</p>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</div>

